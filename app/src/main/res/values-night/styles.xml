<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ToolBarIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_base_16</item>
    </style>

    <style name="ToolBarText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_marginStart">@dimen/toolbar_margin_start_24</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_base_22</item>
    </style>

    <style name="SettingsMenuText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:layout_marginStart">@dimen/margin_base_16</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_list_16</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <!-- SearchActivity -->
    <style name="TrackName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_list_16</item>
    </style>

    <style name="TrackInfo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_base_11</item>
    </style>

</resources>