<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_background">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/ToolBar"
        app:title="@string/settings_activity_header"
        app:navigationIcon="@drawable/ic_back" />

    <Switch
        android:id="@+id/theme_switcher"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_high_64"
        android:layout_marginTop="@dimen/margin_layout_24"
        android:fontFamily="@font/ys_display_regular"
        android:paddingStart="@dimen/margin_base_16"
        android:paddingEnd="8dp"
        android:text="@string/settings_activity_dark_mode"
        android:textSize="@dimen/font_size_list_16"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtv_share"
        style="@style/SettingsMenuText"
        android:drawableEnd="@drawable/ic_share"
        android:text="@string/settings_activity_share" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtv_contact_support"
        style="@style/SettingsMenuText"
        android:drawableEnd="@drawable/ic_contact_support"
        android:text="@string/settings_activity_contact_support" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtv_license_agreement"
        style="@style/SettingsMenuText"
        android:drawableEnd="@drawable/ic_forward"
        android:text="@string/settings_activity_licence_agreement" />

</LinearLayout>