<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_background"
    android:orientation="vertical">

    <LinearLayout
        style="@style/ToolBar"
        tools:ignore="UseCompoundDrawables"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iw_back"
            style="@style/ToolBarIcon"
            android:contentDescription="@string/media_activity_back"
            android:src="@drawable/ic_back" />

        <TextView
            style="@style/ToolBarText"
            android:text="@string/media_activity_header" />

    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:tabRippleColor="@color/yp_black"
        app:tabTextColor="@color/yp_black"
        app:tabIndicatorColor="@color/yp_black" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>