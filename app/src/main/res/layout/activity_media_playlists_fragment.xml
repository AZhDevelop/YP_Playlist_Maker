<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginTop="34dp"
        android:backgroundTint="@color/yp_black"
        android:fontFamily="@font/ys_display_medium"
        android:text="Новый плейлист"
        android:textAllCaps="false"
        android:textSize="14sp"
        app:cornerRadius="54dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:letterSpacing="0"/>

    <ImageView
        android:id="@+id/img_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:src="@drawable/img_search_error"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_placeholder" />

    <TextView
        android:id="@+id/tv_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_base_16"
        android:fontFamily="@font/ys_display_medium"
        android:gravity="center"
        android:text="Вы не создали\nни одного плейлиста"
        android:textColor="@color/yp_black"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_placeholder" />

</androidx.constraintlayout.widget.ConstraintLayout>