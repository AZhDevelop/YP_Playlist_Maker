<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_playlist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yp_playlist_maker.playlist.ui.PlaylistFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        style="@style/ToolBar"
        app:navigationIcon="@drawable/ic_back"
        app:title="@string/playlist_activity_header"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/img_placeholder_border"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/playlist_image_drawable"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <ImageView
        android:id="@+id/img_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_empty_playlist_image"
        app:layout_constraintBottom_toBottomOf="@id/img_placeholder_border"
        app:layout_constraintEnd_toEndOf="@id/img_placeholder_border"
        app:layout_constraintStart_toStartOf="@id/img_placeholder_border"
        app:layout_constraintTop_toTopOf="@id/img_placeholder_border" />

    <EditText
        android:id="@+id/et_playlist_name"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/playlist_empty_text_drawable"
        android:fontFamily="@font/ys_display_regular"
        android:gravity="center_vertical"
        android:hint="@string/playlist_name"
        android:paddingHorizontal="16dp"
        android:textColor="@color/yp_black"
        android:textColorHint="@color/yp_black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_placeholder_border" />

    <EditText
        android:id="@+id/et_playlist_description"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/playlist_empty_text_drawable"
        android:fontFamily="@font/ys_display_regular"
        android:gravity="center_vertical"
        android:hint="@string/playlist_description"
        android:paddingHorizontal="16dp"
        android:textColor="@color/yp_black"
        android:textColorHint="@color/yp_black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_playlist_name" />

    <Button
        android:id="@+id/btn_create_playlist"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginHorizontal="17dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/yp_gray"
        android:fontFamily="@font/ys_display_medium"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:letterSpacing="0"
        android:text="@string/button_create"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_playlist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:background="@color/white"
        android:fontFamily="@font/ys_display_regular"
        android:paddingStart="5dp"
        android:paddingEnd="3dp"
        android:text="@string/playlist_name"
        android:textColor="@color/yp_blue"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/et_playlist_name"
        app:layout_constraintStart_toStartOf="@id/et_playlist_name"
        app:layout_constraintTop_toTopOf="@id/et_playlist_name" />

    <TextView
        android:id="@+id/tv_playlist_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:background="@color/white"
        android:fontFamily="@font/ys_display_regular"
        android:paddingStart="5dp"
        android:paddingEnd="3dp"
        android:text="@string/playlist_description"
        android:textColor="@color/yp_blue"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/et_playlist_description"
        app:layout_constraintStart_toStartOf="@id/et_playlist_description"
        app:layout_constraintTop_toTopOf="@id/et_playlist_description" />


</androidx.constraintlayout.widget.ConstraintLayout>