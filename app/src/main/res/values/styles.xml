<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainScreenButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btn_height_0</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_base_16</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_size_base_22</item>
        <item name="cornerRadius">@dimen/btn_corner_radius_16</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding_8</item>
        <item name="iconTint">@color/black</item>
        <item name="android:insetTop">@dimen/btn_inset_0</item>
        <item name="android:insetBottom">@dimen/btn_inset_0</item>
    </style>

</resources>