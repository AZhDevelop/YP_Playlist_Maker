<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- All Fragments -->
    <style name="ToolBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="titleTextAppearance">@style/ToolBarText</item>
        <item name="titleTextColor">@color/yp_black</item>
    </style>

    <style name="ToolBarText">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/font_size_base_22</item>
    </style>

    <!-- Settings Fragment -->
    <style name="Switcher">
        <item name="colorAccent">@color/yp_blue</item>
    </style>

    <style name="SettingsMenuText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">@dimen/margin_base_16</item>
        <item name="android:paddingVertical">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_size_list_16</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <!-- Search Fragment -->
    <style name="SearchMenuIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:layout_marginEnd">@dimen/margin_base_16</item>
    </style>

    <style name="SearchBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btn_height_36</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_marginStart">@dimen/margin_start_12</item>
        <item name="android:drawableStart">@drawable/ic_search_small</item>
        <item name="android:drawablePadding">@dimen/icon_padding_8</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:hint">@string/search_activity_header</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/font_size_list_16</item>
        <item name="android:textColorHint">@color/search_hint</item>
        <item name="android:textColor">@color/yp_black</item>
    </style>

    <style name="TrackName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_size_list_16</item>
    </style>

    <style name="TrackInfo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/yp_gray</item>
        <item name="android:textSize">@dimen/font_size_base_11</item>
    </style>

    <style name="InfoMessage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/margin_base_16</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="ReloadButton" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_base_16</item>
        <item name="android:backgroundTint">@color/yp_black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:insetTop">@dimen/btn_inset_0</item>
        <item name="android:insetBottom">@dimen/btn_inset_0</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="TrackMainInformation">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="layout_constrainedWidth">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TrackOtherInformation">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/yp_gray</item>
        <item name="android:textSize">13sp</item>
        <item name="layout_constrainedWidth">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- Media Fragment -->
    <style name="TabStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tabTextColor">@color/yp_black</item>
        <item name="tabIndicatorColor">@color/yp_black</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="TabText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="PlaceholderMessage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_base_16</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="PlaceholderButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/btn_height_36</item>
        <item name="android:layout_marginTop">34dp</item>
        <item name="android:backgroundTint">@color/yp_black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:letterSpacing">0</item>
    </style>
    
    <!-- Bottom Navigation Menu-->
    <style name="BottomNavigationMenu">
        <item name="itemTextColor">@color/light_theme_color_selector</item>
        <item name="itemIconTint">@color/light_theme_color_selector</item>
        <item name="itemTextAppearanceActive">@style/ElementActive</item>
        <item name="itemTextAppearanceInactive">@style/ElementInactive</item>
    </style>

    <style name="ElementActive">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ElementInactive">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>